  </script>
  <script>

    function checkJquery(){
      if ( window.jQuery){
        //rotation speedtop and timer
        var speedtop = 10000;

        var runtop = setInterval(rotatetop, speedtop);
        var slidestop = jQuery('.slidestop');
        var containertop = jQuery('#slidestop ul');
        var elm = containertop.find(':first-child').prop("tagName");
        var item_width = containertop.width()-20;
        var previoustop = 'prevtop'; //id of previoustop button
        var nexttop = 'nexttop'; //id of next button
        slidestop.width(item_width); //set the slides to the correct pixel width
        containertop.parent().width(item_width);
        containertop.width(slidestop.length * item_width); //set the slides containertop to the correct total width
        containertop.find(elm + ':first').before(containertop.find(elm + ':last'));
        resetSlides();

        //if user clicked on prev button

        jQuery('#buttonstop a').click(function (e) {
          //slide the item

          if (containertop.is(':animated')) {
            return false;
          }

          if (jQuery(this).attr("id") == nexttop) {
            containertop.stop().animate({
              'left': [0,"linear"]
            }, 1500, function () {
              containertop.find(elm + ':first').before(containertop.find(elm + ':last'));
              resetSlides();
            });
          }

          if (jQuery(this).attr("id") == previoustop) {

            containertop.stop().animate({
              'left': [item_width * -2,"linear"]
            }, 1500, function () {
              containertop.find(elm + ':last').after(containertop.find(elm + ':first'));
              resetSlides();
            });
          }

          //cancel the link behavior
          return false;

        });

        //if mouse hover, pause the auto rotation, otherwise rotate it
        /*containertop.parent().mouseenter(function () {
        clearInterval(runtop);
    }).mouseleave(function () {
        runtop = setInterval(rotatetop, speedtop);
    });*/


        function resetSlides() {
          //and adjust the containertop so current is in the frame
          containertop.css({
            'left': -1 * item_width
          });
        }
        //a simple function to click next link
        //a timer will call this function, and the rotation will begin

        function rotatetop() {
          jQuery('#nexttop').click();
        }
        jQuery(window).resize(function() {
          item_width=jQuery(window).width()-30;
          slidestop.width(item_width); //set the slides to the correct pixel width
          containertop.parent().width(item_width);
          containertop.width(slidestop.length * item_width); //set the slides containertop to the correct total width
          containertop.find(elm + ':first').before(containertop.find(elm + ':last'));
          resetSlides();
        });
      }
      else{
        window.setTimeout("checkJquery();",100);
      }
    }
    checkJquery();



  </script>
  <style>
    #shopify-section-announcement {
