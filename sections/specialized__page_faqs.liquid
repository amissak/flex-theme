        "label": "Specialized Review Content"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "standard",
        "options": [
          {
            "value": "half",
            "label": "Half"
          },
          {
            "value": "standard",
            "label": "Standard"
          },
          {
            "value": "wide",
            "label": "Wide"
          }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top spacing",
        "min": 0,
        "max": 80,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom spacing",
        "min": 0,
        "max": 80,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_left",
        "label": "Left spacing",
        "min": 0,
        "max": 80,
        "default": 0,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_right",
        "label": "Right spacing",
        "default": 0,
        "min": 0,
        "max": 80,
        "unit": "px"
      },
      {
        "type": "select",
        "id": "review__side",
        "label": "Review Side",
        "default": "order-0",
        "options": [
          {
            "value": "order-0",
            "label": "Right"
          },
          {
            "value": "order-2",
            "label": "Left"
          }
        ]
      },
      {
        "type": "select",
        "id": "animation",
        "label": "Animation",
        "default": "none",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "fadeIn",
            "label": "Fade in"
          },
          {
            "value": "fadeInDown",
            "label": "Fade in down"
          },
          {
            "value": "fadeInLeft",
            "label": "Fade in left"
          },
          {
            "value": "fadeInRight",
            "label": "Fade in right"
          },
          {
            "value": "slideInLeft",
            "label": "Slide in left"
          },
          {
            "value": "slideInRight",
            "label": "Slide in right"
          },
          {
            "value": "zoomIn",
            "label": "Zoom in"
          }
        ]
      },
      {
        "type": "header",
        "content": "Advanced"
      },
      {
        "type": "paragraph",
        "content": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
      },
      {
        "type": "text",
        "id": "css_class",
        "label": "CSS Class"
      },
      {
        "type": "text",
        "id": "css_id",
        "label": "ID"
      },
      {
        "type": "textarea",
        "id": "custom_css",
        "label": "Custom CSS"
      }
    ],
  	"blocks": [
      {
        "type": "specialized__faqs",
        "name": "Specialized FAQs",
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "FAQs Question"
          },
          {
            "id": "specialized__faqs_ans",
            "type": "html",
            "label": "FAQs Answer"
          },
          {
            "type": "select",
            "id": "faqs__expand",
            "label": "FAQs Expand",
            "default": "false",
            "options": [
              {
                "value": "false",
                "label": "False"
              },
              {
                "value": "true",
                "label": "True"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Specialized FAQs",
        "category": "Layout",
        "settings": {

        }
      }
    ]
  }
