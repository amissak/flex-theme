{% style %}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_left }}px;
    padding-right: {{ section.settings.padding_right }}px;
    {% if section.settings.width == 'wide' -%}
      width: 100%;
    {%- elsif section.settings.width == 'half' -%}
      width: 50%;
    {%- endif %}
  }
  {% render 'css-loop',
          css: section.settings.custom_css,
          id: section.id
  %}
{% endstyle %}

<section class="section {{ section.settings.css_class }}
                is-width-{{ section.settings.width }}
                {% if background_alpha != 0 or gradient_alpha != 0  %}
                has-background
                {% endif %}
                "
         data-section-id="{{ section.id }}"
         {% if section.settings.animation != "none" %}
         data-scroll-class="{{ section.settings.animation }}"
         {% endif %}>
 {% if section.settings.show__spe__review %}
  <div class="container pe-md-0">
    <div class="row m-0 align-items-center">
      <div class="col-md-8 lite-gr-bg d-flex align-items-center align-self-stretch px-1 px-md-5 {{ section.settings.review__side }}">
        <div class="row m-0">
          <div class="col-12 py-5">
            <h1 class="title text-center">{{ section.settings.specialized__faqs_title }}</h1>
            <div class="accordion" id="accordionExample">
              {% for block in section.blocks %}
                <div class="accordion-item">
                  {% case block.type %}
                    {% when 'specialized__faqs' %}
                        {% include 'specialized__faqs' %}
                  {% endcase %}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 order-1">
        <div class="carousel-cell">
          <img src="{{section.settings.specialized__review_img | img_url : 'large' }}" data-src="{{section.settings.specialized__review_img | img_url : 'large' }}" alt="ST.Tropica" class="lazyload transition--blur-up hvrbox-layer_bottom img-fluid-h">
          <div class="hvrbox-layer_top hvrbox-layer_slideup text-center">
            <div class="hvrbox-text">
              <p class="mb-0 mt-3 p-0 caps"><b>{{ section.settings.specialized__review_title }}</b></p>
              <div class="fc-star">
                <span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span>
              </div>
              <div id="summary">
                <p class="more collapse">{{ section.settings.specialized__review_content }}</p>
              </div>
              <span class="home-vitamin-review-span stt-pink-text">- {{ section.settings.specialized__review_name }}</span>
              <a data-fancybox data-options='{"src": "#{{ section.settings.css_id }}"}' href="javascript:;" class="stt-pink-text right">- Read More</a>
            </div>
          </div>
          <div class="review-popup text-center" id="{{ section.settings.css_id }}">
            <img src="{{section.settings.specialized__review_img | img_url : 'large' }}" data-src="{{section.settings.specialized__review_img | img_url : 'large' }}" alt="ST.Tropica" class="lazyload transition--blur-up hvrbox-layer_bottom img-fluid-h mb-3">
            <p class="mb-0 mt-3 p-0 caps" data-selectable="true"><b>{{ section.settings.specialized__review_title }}</b></p>
            <div class="fc-star">
              <span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span>
            </div>
            <p data-selectable="true">{{ section.settings.specialized__review_content }}</p>
            <span class="home-vitamin-review-span stt-pink-text float-none" data-selectable="true">- {{ section.settings.specialized__review_name }}</span>
          </div>
        </div>
        <img src="{{ 'trubloom_icons.png' | asset_url }}" data-src="{{ 'trubloom_icons.png' | asset_url }}" alt="ST.Tropica" class="lazyload transition--blur-up hvrbox-layer_bottom img-fluid-h stt-pink-bg mt-3 p-3">
      </div>
    </div>
  </div>
  {% else %}
   <div class="container pe-md-0">
    <div class="row m-0 align-items-center">
      <div class="col-md-12 lite-gr-bg d-flex align-items-center align-self-stretch px-1 px-md-5 {{ section.settings.review__side }}">
        <div class="row m-0">
          <div class="col-12 py-5">
            <h1 class="title text-center">{{ section.settings.specialized__faqs_title }}</h1>
            <div class="accordion" id="accordionExample">
              {% for block in section.blocks %}
                <div class="accordion-item">
                  {% case block.type %}
                    {% when 'specialized__faqs' %}
                        {% include 'specialized__faqs' %}
                  {% endcase %}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</section>

<section id="shopify-section-{{ section.id }}" class="section {{ section.settings.css_class }}
                is-width-{{ section.settings.width }}
                {% if background_alpha != 0 or gradient_alpha != 0  %}
                has-background
                {% endif %}
                "
         data-section-id="{{ section.id }}"
         {% if section.settings.animation != "none" %}
         data-scroll-class="{{ section.settings.animation }}"
         {% endif %}>
  <div class="container">
    <div class="row m-0 py-3 px-2 px-md-0 align-items-center trubloom_review_bg">
      <div class="col-md-7 py-4 d-flex justify-content-end px-md-5">
        <img class="img-fluid" src="{{ 'blownaway_moneyback_1.png' | asset_url }}"/>
      </div>
      <div class="col-md-5">
        <a href="/products/st-tropica-hair-vitamins-hair-challenge-2-month-supply?ref={{ section.settings.affiliate_code }}" data-uw-styling-context="true" data-uw-rm-brl="false">
          <button type="submit" class="button stt-pink-bg text-white" data-uw-styling-context="true">Shop Now</button>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Specialized FAQs",
    "class": "specialized",
    "settings": [
      {
        "type": "text",
        "id": "affiliate_code",
        "label": "Affiliate Code"
      },
      {
        "type": "text",
        "id": "specialized__faqs_title",
        "label": "FAQs Title"
      },
	  {
        "type": "checkbox",
        "id": "show__spe__review",
        "label": "Show Review",
        "default": true
      },
      {
        "type": "text",
        "id": "specialized__review_title",
        "label": "Specialized Review Title"
      },
      {
        "type": "text",
        "id": "specialized__review_name",
        "label": "Specialized Review Name"
      },
	  {
        "type": "image_picker",
        "id": "specialized__review_img",
        "label": "Specialized Review Image"
      },
	  {
        "type": "textarea",
